<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/actionbar_background">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/btn_dots_logo_sats"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/meny_icon"
        android:paddingTop="4dp"/>

    <ImageButton
        android:id="@+id/btn_logo_sats"
        android:layout_height="30dp"
        android:layout_width="75dp"
        android:background="@null"
        android:layout_toEndOf="@id/btn_dots_logo_sats"
        android:scaleType="centerInside"
        android:src="@drawable/sats_logo"
        android:paddingTop="4dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toEndOf="@id/btn_logo_sats"
        android:textStyle="bold"
        android:textColor="@color/actionbar_title"
        android:text="@string/my_training_actionbar_text"
        android:background="@null"
        android:paddingTop="4dp"/>
</RelativeLayout>